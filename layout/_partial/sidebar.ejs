<div class="personal-info">
  <figure>
      <a href="<%- config.root %>">
        <img class="personal-photo" src="<%- gravatar(config.email, 400) %>" alt="<%- config.author %>">
      </a>
    <figcaption>
      <h3 class=><%- config.author %></h3>
      <p><%- theme.about %></p>
    </figcaption>
  </figure>
  <section class="social">
    <% if( theme.github) { %>
      <a target="_blank" href="http://github.com/<%= theme.github %>"><i class="icon fa fa-github-square fa-2x"></i></a>
    <% } %>
    <% if( theme.twitter.username ) { %>
      <a target="_blank" href="http://twitter.com/<%- theme.twitter.username %>"><i class="icon fa fa-twitter-square fa-2x"></i></a>
    <% } %>
    <% if(theme.googleplus) { %>
      <a target="_blank" href="https://plus.google.com/<%- theme.googleplus %>"><i class="icon fa fa-google-plus-square fa-2x"></i></a>
    <% } %>
    <% if( theme.email ) { %>
      <a target="_blank"  href="mailto:<%- theme.email %>"><i class="icon fa fa-envelope fa-2x"></i></a>
    <% } %>
  </section>
</div>
